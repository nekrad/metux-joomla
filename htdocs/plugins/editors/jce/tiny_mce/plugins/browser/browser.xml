<?xml version="1.0" ?>
<install version="1.5.0" type="plugin" plugin="browser">
	<name>Browser</name>
	<version>1.5.0</version>
	<creationDate>28 February 2008</creationDate>
	<author>Ryan Demmer</author>
	<authorEmail>ryandemmer@gmail.com</authorEmail>
	<authorUrl>http://www.joomlacontenteditor.net/</authorUrl>
	<copyright>Ryan Demmer</copyright>
	<license>GPL</license>
	<description><![CDATA[ 
	<p>Browser 1.5.0</p>
	<p>Changelog (from 1.5.0 beta 2):
	<ul>
		<li>Added: Support for JCE Groups</li>
	</ul>
	</p>
	<p>Changelog (from 1.5.0 beta 1):
	<ul>
		<li>Added: Support for absolute urls</li>
		<li>Added: Support for dynamic file path</li>
		<li>Changed: User restriction methods</li>
	</ul>
	</p>
	]]></description>
	<icon></icon>
	<layout></layout>
	<elements></elements>
	<files>
		<filename>editor_plugin.js</filename>
		<filename>browser.php</filename>
		<filename>classes/index.html</filename>
        <filename>classes/browser.php</filename>
        <filename>css/index.html</filename>
        <filename>css/browser.css</filename>
        <filename>index.html</filename>
        <filename>js/browser.js</filename>
        <filename>js/index.html</filename>
        <filename>langs/en_dlg.js</filename>
        <filename>langs/index.html</filename>
    </files>
	<params group="standard">
        <param name="browser_dir" type="text" default="" label="MANAGER PARAM DIRECTORY" description="MANAGER PARAM DIRECTORY DESC"/>
		<param name="browser_max_size" type="text" default="" label="MANAGER PARAM UPLOAD SIZE" description="MANAGER PARAM UPLOAD SIZE DESC"/>
	</params>
	<params group="access">
        <param name="browser_upload" type="list" default="1" label="UPLOAD" description="UPLOAD DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="browser_folder_new" type="list" default="1" label="FOLDER CREATE" description="FOLDER CREATE DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="browser_folder_delete" type="list" default="1" label="FOLDER DELETE" description="FOLDER DELETE DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="browser_folder_rename" type="list" default="1" label="FOLDER RENAME" description="FOLDER RENAME DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="browser_file_delete" type="list" default="1" label="FILE DELETE" description="FILE DELETE DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="browser_file_rename" type="list" default="1" label="FILE RENAME" description="FILE RENAME DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="browser_file_move" type="list" default="1" label="FILE PASTE" description="FILE PASTE DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
	</params>
	<languages></languages>
	<help>
		<topic key="browser.about" title="Help About" />
		<topic key="browser.interface" title="Help Interface" />
		<topic key="browser.insert" title="Help Insert" />
	</help>
</install>
